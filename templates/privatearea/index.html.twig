    <script>
        document.getElementById('save_button').addEventListener('click',function(){
            const pasto = document.getElementById('pasto');
            const tipo = document.getElementById('tipo');



            console.log(pasto.value, tipo.value);

            if (pasto.value && tipo.value){
                this.disabled=true;
                fetch('/pasto/create', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: JSON.stringify({
                        pasto: pasto.value,        // colazione | pranzo | cena
                        tipo: tipo.value      // normale | grassa | ecc
                    })
                })
                    .then(response => {
                        return response.json().then(data => {
                            if (!response.ok) {
                                throw new Error(data.error || 'Errore di salvataggio');
                            }
                            return data;
                        });
                    })
                    .then(data => {
                        console.log('Salvato:', data);
                        Swal.fire({
                            toast: true,
                            position: 'top-end',
                            icon: 'success',
                            title: 'Pasto creato con successo',
                            showConfirmButton: false,
                            timer: 3000,
                            timerProgressBar: true
                        });

                    })
                    .catch(error => {
                        console.error('Errore:', error);
                        Swal.fire({
                            icon: 'error',
                            title: error.message,
                            confirmButtonColor: '#d33'
                        });
                    })
                    .finally(() => {
                        this.disabled = false;
                    })
            }

        })
    </script>


