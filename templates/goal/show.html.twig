{% extends 'base.html.twig' %}

{% block body %}

<h1> Product </h1>

<table>
    <tbody>
            <tr>
                <th>Name</th>
                <td>{{ goal.name }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ goal.quantity }} di {{ goal.goalQuantity }}</td>
            </tr>
            <tr>
                <th>Expiration</th>
                <td>{{ goal.expiration|date("d/m/Y") }}</td>
            </tr>
    </tbody>
</table>

<a href="{{ path('goal_edit', {'id': goal.id}) }}">Edit</a>

<a href="{{ path('goal_delete', {'id': goal.id}) }}">Delete</a>

{% endblock %}