    <h1>Registrazione</h1>

    {{ form_row(registrationForm.email) }}

    {{ form_row(registrationForm.username) }}

    {{ form_row(registrationForm.plainPassword) }}

    <input type="checkbox" id="chk">
    <label for="chk"><i class="fa-regular fa-eye" id="eye" style="opacity: 0.6;"></i></label>

    <script>
        const passw = document.getElementById("registration_form_plainPassword");
        const chk = document.getElementById("chk");
        const eye = document.getElementById("eye");

        chk.onchange = function show(e) {
            passw.type = chk.checked ? "text" : "password";
            eye.className = chk.checked ? "fa-regular fa-eye-slash" : "fa-regular fa-eye";
        };
    </script>

    {{ form_row(registrationForm.agreeTerms) }}

    <button id="button" type="submit" class="btn">Registrati</button>

    <p>hai gi√† un account?<a class="loginLink" href="{{ path('app_login') }}">clicca qui per accedere</a></p>

    {{ form_end(registrationForm) }} {% for message in app.flashes('error') %}

    <script>
        Swal.fire({
            icon: 'error',
            title: '{{ message }}',
            confirmButtonColor: '#d33'
        });
    </script>

